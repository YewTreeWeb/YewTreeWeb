---
export interface Props {
  id: string;
  title: string;
  fontSize?: string
  lead?: boolean
}

const { title, id, fontSize = 'text-2xl', lead } = Astro.props;
---

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8"
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-extrabold tracking-tight text-6xl"
    >
      {title}
    </h2>
  </div>
  {lead && (
    <p class=`max-w-[50rem] text-center font-extrabold ${fontSize}`>
      <slot name="lead" />
    </p>
  )}
  <slot />
</section>
