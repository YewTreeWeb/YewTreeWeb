{
  "name": "yewtreeweb",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "lint": "prettier --check . && stylelint --allow-empty-input \"**/*.{css,scss,astro}\" && eslint \"src/**/*.{js,ts,astro}\"",
    "format": "prettier --write . && stylelint --fix .css,.scss,.astro . && eslint --fix --ext .js,.ts,.astro ."
  },
  "dependencies": {
    "@astrojs/check": "^0.7.0",
    "@astrojs/sitemap": "^3.1.5",
    "astro": "^4.8.6",
    "normalize.css": "^8.0.1",
    "rehype-external-links": "^3.0.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/prompt-cli": "^19.3.1",
    "@eslint/js": "^9.4.0",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.0",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "lightningcss": "^1.25.1",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-toml": "^2.0.1",
    "sass": "^1.77.2",
    "stylelint": "^16.5.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.3.0",
    "stylelint-selector-bem-pattern": "^4.0.0",
    "typescript-eslint": "^7.11.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.astro": [
      "stylelint --fix",
      "eslint --fix",
      "prettier --write"
    ],
    "!(*.css|*.scss|*.js|*.ts|*.astro)": [
      "prettier --write"
    ]
  }
}
